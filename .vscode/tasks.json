{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    // Thanks to tonetechnician for these tasks (https://medium.com/@tonetechnician/how-to-setup-your-windows-vs-code-environment-for-vcv-rack-plugin-development-and-debugging-6e76c5a5f115)
    "tasks": [
        {
            "label": "Build-Install",
            "type": "shell",
            "command": "make ARGS=\"no-strip\" install",
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "${config:msys64_dir}/usr/bin/;${config:msys64_dir}/mingw64/bin",
                    "RACK_DIR": "${config:rack_sdk_dir}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Clean project directories",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "${config:msys64_dir}/usr/bin/;${config:msys64_dir}/mingw64/bin",
                    "RACK_DIR": "${config:rack_sdk_dir}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}